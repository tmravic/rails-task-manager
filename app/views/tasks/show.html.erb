<div class="d-flex justify-content-between">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit this task", edit_task_path, class: "btn btn-default border bg-light my-2" %>
</div>

<p class="bg-light p-3 border rounded text-primary">
  <%= @task.details %>
</p>
<div>
  <% if @task.completed? %>
  <p><i class="far fa-check-square"></i> This task is complete</p>
  <% else %>
  <p><i class="far fa-square"></i> This task is not completed yet
  <% end %>
</div>
<i class="fas fa-history"></i> <%= link_to "Back to list", tasks_path %>
