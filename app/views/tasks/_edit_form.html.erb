<%= form_for(@task) do |f| %>
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', value: @task.title %>

    <%= f.label :details, class: 'form-label' %>
    <%= f.text_field :details, class: 'form-control', value: @task.details %>

    <%= f.label :completed, class: 'form-check-label' %>
    <%= f.check_box :completed, class: 'form-check-input py-2', value: @task.completed  %>
    <br>
    <%= f.submit class: 'btn btn-primary mt-2' %>
<% end %>
